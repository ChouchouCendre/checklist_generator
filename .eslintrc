{
  parser: "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "max-len": 0,
    "padded-blocks": 0,
    "class-methods-use-this": 0,
    "space-before-function-paren": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/display-name": 0,
    "react/prop-types": 0,
    "no-console" : 0, // DEBUG ONLY - REMOVE PROD,
    "no-else-return" : 0,
    "semi": 0,
    "react/jsx-no-target-blank": 0,
    "arrow-body-style": 0,
    "prefer-template": 0,
    "prefer-arrow-callback": 0,
    "arrow-parens": 0,
    "no-lonely-if": 0,
    "dot-notation": 0,
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb-base"]
}